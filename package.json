    "react-scripts": "^5.0.0",
    "react": "^18",
    "react-dom": "^18",
    "react-router-dom": "^6"
  },
  "optionalDependencies": {},
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
